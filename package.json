{
  "name": "modernode",
  "version": "0.1.0",
  "description": "Modern Node.js + ES2015 boilerplate",
  "author": "Andrey Zharikov",
  "license": "MIT",
  "main": "app.js",
  "scripts": {
    "lint": "eslint *.js test/ src/",
    "test": "mocha --compilers js:babel-register",
    "coverage": "rm -rf coverage/* && babel-node ./node_modules/.bin/istanbul cover _mocha -- --compilers js:babel-register",
    "dev": "nodemon ./src/app.js --exec babel-node",
    "compile": "rm -rf dist/* && babel ./src -d dist",
    "start": "node ./dist/app.js"
  },
  "dependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.11.6",
    "dotenv": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-loader": "^1.4.1",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.2.2",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^2.2.5",
    "nodemon": "^1.10.0"
  }
}
